        android:inputType="text"
        android:id="@+id/comp_le_content"
        android:layout_width="wrap_content"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        >
        <requestFocus />
    </EditText>
</merge>