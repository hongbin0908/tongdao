        android:id="@+id/comp_le_label"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:text="Label"
        android:textSize="25sp"
        android:gravity="center"/>
